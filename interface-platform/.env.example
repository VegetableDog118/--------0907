# 接口平台环境变量配置模板
# 请复制此文件为 .env 并填入实际的配置值

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=interface_platform
DB_USERNAME=platform
DB_PASSWORD=your_database_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400
JWT_ISSUER=PowerTrading-Interface-Platform

# 邮件配置
MAIL_HOST=smtp.qq.com
MAIL_PORT=587
MAIL_USERNAME=your_email@qq.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=your_email@qq.com
MAIL_FROM_NAME=电力交易中心接口平台

# RabbitMQ配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# Druid监控配置
DRUID_LOGIN_USERNAME=admin
DRUID_LOGIN_PASSWORD=your_druid_password

# 安全配置
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_ACCOUNT_LOCK_DURATION=30
SECURITY_NOTIFICATION_EMAIL=security@powertrading.com

# 应用配置
APP_NAME=PowerTrading Interface Platform
APP_VERSION=2.0.0
APP_DESCRIPTION=电力交易中心接口服务平台

# 服务端口配置
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
INTERFACE_SERVICE_PORT=8083
NOTIFICATION_SERVICE_PORT=8084
APPROVAL_SERVICE_PORT=8085
USER_SERVICE_PORT=8086
DATASOURCE_SERVICE_PORT=8088

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_HISTORY=30

# 缓存配置
CACHE_DEFAULT_TTL=1800
CACHE_USER_PERMISSIONS_TTL=1800
CACHE_USER_ROLES_TTL=1800
CACHE_ROLE_PERMISSIONS_TTL=3600
CACHE_API_PERMISSIONS_TTL=7200

# 接口配置
INTERFACE_PATH_PREFIX=/px-phzhb-external-share/dataproduct/
INTERFACE_DEFAULT_TIMEOUT=30
INTERFACE_DEFAULT_RATE_LIMIT=1000
INTERFACE_SQL_TIMEOUT=60
INTERFACE_CACHE_EXPIRE=300
INTERFACE_BATCH_MAX_SIZE=100

# 数据源配置
DATASOURCE_POOL_MAX_SIZE=10
DATASOURCE_POOL_MIN_IDLE=2
DATASOURCE_CONNECTION_TIMEOUT=30000
DATASOURCE_QUERY_TIMEOUT=30000
DATASOURCE_MAX_ROWS=10000

# 监控配置
MONITOR_HEALTH_CHECK_INTERVAL=60000
MONITOR_CONNECTION_TIMEOUT=5000
MONITOR_ALERT_THRESHOLD=5
MONITOR_METRICS_RETENTION_DAYS=30